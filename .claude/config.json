{
  "version": "1.0",
  "project": {
    "name": "Takharrujy Platform",
    "type": "enterprise-web-application",
    "domain": "education-technology",
    "architecture": "modular-monolithic",
    "scale": "multi-tenant-saas"
  },
  "sparc": {
    "enabled": true,
    "modes": [
      "architect",
      "coder", 
      "researcher",
      "tdd",
      "reviewer",
      "debugger",
      "tester",
      "analyzer",
      "optimizer",
      "documenter",
      "security-review",
      "devops",
      "integration"
    ]
  },
  "swarm": {
    "enabled": true,
    "strategies": [
      "development",
      "testing", 
      "optimization",
      "maintenance",
      "research",
      "analysis"
    ],
    "coordination": "hierarchical",
    "maxAgents": 6
  },
  "memory": {
    "enabled": true,
    "backend": "sqlite",
    "persistence": true,
    "indexing": true
  },
  "automation": {
    "enabled": true,
    "batchOperations": true,
    "parallelExecution": true,
    "workflowOptimization": true
  },
  "integrations": {
    "github": {
      "enabled": true,
      "repository": "TakharrujyBackend",
      "branch": "main"
    },
    "mcp": {
      "enabled": true,
      "tools": ["gitmvp", "github", "lighthouse"]
    }
  }
}
